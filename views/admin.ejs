<!--Fetching the DATA from results -->

        <% results.forEach(element => {  %>
               <% var users = JSON.parse(element.user);  %>

            <div id="mydiv" class="column">
                <div class="card">
                  <img src="avatar.png" class="w3-bar-item w3-circle w3-hide-small" style="width:85px">
                  <% var done = 0 ;var todo = 0 %>
                  <br><h3 style="left: 48%; top: 15%;position: absolute;"><%= element.username %><br><h3></h3>
                  <ul>
                  <%  users.todolist.forEach(element => { %>
                    <% if (element.status == true) { %>
                        <% done++  ; %>
                       <label class="container" style="font-size: initial;"><%=element.contenu%>
                            <input type="checkbox" checked="checked">
                            <span class="checkmark"></span>
                        </label> 
                        <% }else{ %>
                            <% todo++  ; %>
                            <label class="container" style="font-size: initial;"><%=element.contenu%>
                            <input type="checkbox" >
                            <span class="checkmark"></span>
                        </label>
                        <% } %>
                  <% });%>
                  <!-- En cas ou le pourcentage est NaN -->
                  <% if (done+todo == 0) { todo = 1 ; } %>
                <!--Affichage du porcentage -->
