<!doctype html>
<html lang="en">
  <head>
  	<title>Cloudnote</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css"
        integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
		<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
		<link rel="stylesheet" href="css/style.css">
  </head>
  <body>
    <div style=" top :50% ; background-color: #2f89fc;">
      <div class="f" style="top :50% "></div>
      <img src="../assests/bg.png" style="height: 20%; width :30%; color: #212121">
      <img src="../assests/logo2.png" style="position: absolute ; top: 0%;left: 46%;HEIGHT: 165px;">
      <img src="../assests/bg.png" style="height: 20%; width :30% ; float:right;transform:rotateY(180deg);">
  </div>
		
		<div class="wrapper d-flex align-items-stretch">
			<nav id="sidebar">
				<div class="custom-menu">
					<button type="button" id="sidebarCollapse" class="btn btn-primary">
	          <i class="fa fa-bars"></i>
	          <span class="sr-only">Toggle Menu</span>
	        </button>
        </div>
	  		<h1><a href="index.html" class="logo">Project Name</a></h1>
        <ul class="list-unstyled components mb-5">
          <li class="active">
            <a href="#"><span class="fa fa-home mr-3"></span> Homepage</a>
          </li>
          <li>
              <a href="#"><span class="fa fa-user mr-3"></span> Dashboard</a>
          </li>
          <li>
            <a href="#"><span class="fa fa-sticky-note mr-3"></span> Projects</a>
          </li>
          <li>
            <a href="#"><span class="fa fa-sticky-note mr-3"></span> Subcription</a>
          </li>
          <li>
            <a href="#"><span class="fa fa-paper-plane mr-3"></span> Settings</a>
          </li>
          <li>
            <a href="#"><span class="fa fa-paper-plane mr-3"></span> Information</a>
          </li>
          <footer>
          <li>
            <a href="http://localhost:2000/"><i class="fa fa-sign-out fa-rotate-180"></i> Logout</a>  
          </li>
        </footer>

        </ul>

    	</nav>

        <!-- Page Content  -->
      <div id="content" class="p-4 p-md-5 pt-5">
        
      <div class="container" style="padding-left: 0px; ">
          <div style="text-align: center;" class="col"> 
              <div  style="float: right;">
                  <h3>
                    Bonjour <%= obj.name%>
                    Votre id = <%= iduser %>
                  </h3>
              </div>
          </div>
          <div class="row">
                  <h2>
                      Todo List
                  </h2>
              </div>
          <div class="row">
              <div class="col">
                  <button class="btn btn-info my-2 my-sm-0" data-toggle="modal" data-target="#exampleModal"
                      data-whatever="@mdo">Ajouter ToDo</button>
                  <button class="btn btn-secondary my-2 my-sm-0" (click)="delete()"
                      style=" margin-left: 1000px ; border-radius: 200px; ">Clear All</button>
              </div>
          </div>
          <div class="row">
              <div class="col">
                  <table class="table">
                      <thead >
                          <tr>
                              <th >id</th>
                              <th >Description</th>
                              <th >Date d'ajout</th>
                              <th >Action</th>
                          </tr>
                      </thead>
                      <tbody>
                        <%  for (var i = 0; i < obj.todolist.length; i++) { %>
                          <% if (obj.todolist[i].status == true) { %>
                             <tr>
                                 <td><%= obj.todolist[i].id %></td>
                                 <td ><%= obj.todolist[i].contenu %></td>
                                 <td > <%= new Date %> </td>
                                 <td> <% var d = i %> 
                                 <button onclick="faire('<%= d %>')" class="btn btn-success">Terminer</button>                                     
                                     <button type="button" class="btn btn-warning mx-3" data-toggle="modal"data-target="#exampleModall" data-whatever="@mdo" onclick="'<%= todoid = d  %>'  " >Modifierr </button>
                                     <button class="btn btn-danger">Supprimer</button>
                                 </td>
                             </tr>
                            
                           <%} %>
                         <%} %>
                      </tbody>
                  </table>
                 
              </div>
          </div>
          <hr>
          
              
          <script>
            function faire(d){
             return  d ;
             
        } 
        </script>  
              <%% j = faire() %>
         
      
          <div class="row">
              <div class="col">
                  <h2>
                      DoneList
                  </h2>
              </div>
      
          </div>
          <div class="row">
              <div class="col">
                  <button class="btn btn-secondary" (click)="deletedone()"
                      style=" margin-left: 1000px ; border-radius: 200px ;">Clear All</button>
              </div>
          </div>
          <div class="row">
              <div class="col">
                  <div class="row" class="alert alert-warning">Aucun Done-ToDo Disponible </div>
      
              <table class="table">
                  <thead>
                      <tr>
                          <th>id</th>
                          <th>Description</th>
                          <th>Date d'ajout</th>
                          <th>Action</th>
                      </tr>
                  </thead>
                  <tbody>
                    <%  for (var i = 0; i < obj.todolist.length; i++) { %>
                      <% if (obj.todolist[i].status == false) { %>
                           <tr>
                               <td><%= obj.todolist[i].id %></td>
                               <td><%= obj.todolist[i].contenu %></td>
                               <td> 13/09/1999 </td>
                               <td> <button class="btn btn-success">Terminer</button>
                                   <button type="button" class="btn btn-warning mx-3" data-toggle="modal" data-target="#exampleModal"
                                       data-whatever="@mdo">Modifier </button>
                                   <button class="btn btn-danger">Supprimer</button>
                               </td>
                           </tr>
                     <%} %>                           
                   <%} %>
                  </tbody>
              </table>
              </div>
          </div>
      </div>
      
     
      <div class="modal fade" id="exampleModall" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
              <div class="modal-content">
                  <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Change ToDo</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                      </button>
                  </div>
                  <div class="modal-body">
                      <form action="/changetodo?id=<%=iduser%>?idtodo='faire(d)' " method="post">
      
                          <div class="form-group">
                              <label for="message-text" class="col-form-label">The ToDo is:</label>
                              <input name="changedtodo"  type="text" class="form-control" formControlName="todochanged">
                          </div>
      
      
                          <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                              <button class="btn btn-primary" type="submit">Save Changes</button>
                          </div>
                      </form>
                  </div>
      
              </div>
          </div>
      </div>
      
      <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
          aria-hidden="true">
          <div class="modal-dialog" role="document">
              <div class="modal-content">
                  <div class="modal-header">
                      <h5 class="modal-title" id="exampleModalLabel">Adding ToDo</h5>
                      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                          <span aria-hidden="true">&times;</span>
                      </button>
                  </div>
                  <div class="modal-body">
                      <form action="/addtodo?id=<%=iduser%>" method="post">
                          <div class="form-group">
                              <label for="message-text" class="col-form-label">The ToDo is:</label>
                              <input name="todo" id="todo" type="text" class="form-control" formControlName="todo">
                          </div>
      
                          <div class="modal-footer">
                              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                              <button type="submit" class="btn btn-info" value="Register">Save
                              </button>
                          </div>
                      </form>
                  </div>
              </div>
          </div>
      </div>      </div>
		</div>

    <script src="js/jquery.min.js"></script>
    <script src="js/popper.js"></script>
    <script src="js/bootstrap.min.js"></script>
    <script src="js/main.js"></script>
   
  </body>
</html>